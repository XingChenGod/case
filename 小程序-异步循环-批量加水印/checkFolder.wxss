movable-area{
  width: 100%;
  height: 100%;
}

movable-view{
  width: 150rpx;
  border: 0;
}

.weui-grids .weui-grid{
  height: 280rpx;
  padding: .25rem;
  border: solid 1px #ededed;
  background: #fff;
}

.weui-grids .weui-grid .imgInput{
  position: absolute;
  bottom: 0;
  font-size: 30rpx;
}

.weui-grids .weui-grid .titles{
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  height: 40rpx;
}

#moveArea{
  overflow: auto;
}
.moveImg{
  width: 33.33333%;
  height: 6.5rem;
  padding: 0.25rem;
  border: solid 1px #ededed;
  box-sizing: border-box;
  background: #fff;
  opacity: 0.8;
}
.moveImg image{
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.weui-grids .weui-grid image{
  width: 100%;
  height: 200rpx;
  box-sizing: border-box;
  background: #fff;
}

.remove-txt{
  bottom: 12rpx;
  width: 100%;
  height: 50rpx;
  line-height: 2;
  text-align: center;
  color: #fff;
  background: rgba(0,0,0,0.7);
  font-size: 24rpx;
}

/* 底部按钮 */
.menu{
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  display: -webkit-flex;
  flex-wrap: nowrap;
  width: 100%;
  height: 100rpx;
  text-align: center;
}

.menu .add{
  box-sizing: border-box;
  flex: 1;
  height: 100%;
  padding-top: 20rpx;
  background-color: #E5E5E5;
  color: #03A9F4;
}

.menu .save{
  box-sizing: border-box;
  flex: 1;
  height: 100%;
  padding-top: 20rpx;
  background-color: #03A9F4;
  color: #fff;
}

#my-canvas{
  position: fixed;
}